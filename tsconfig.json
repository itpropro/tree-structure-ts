{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "Node16",
    "module": "ESNext",
    "outDir": "./dist",
    "target": "ES2020",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ]
}